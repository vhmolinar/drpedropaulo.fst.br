---
import Icon from './Icon.astro';

export interface Props {
	title: string;
	icon: string;
    href: string;
}

const { title, icon, href } = Astro.props;
---

<div class="relative flex items-center space-x-3 rounded-lg border border-primary bg-white px-6 py-5 hover:bg-primary p-4 shadow-md hover:shadow-xl">
    <div class="min-w-0 flex-1">
        <a href={href} target="_blank" class="focus:outline-none">
            <div style="float:left;margin-right:10px;">
                <Icon icon={icon} url={href}/>
            </div>
            <p class=" text-xl font-medium text-gray-900">
                {title}
            </p>
        </a>
    </div>
</div>